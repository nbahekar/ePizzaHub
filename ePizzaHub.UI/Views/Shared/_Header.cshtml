                    </li>
                    @if (CurrentUser != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-dark">Welcome: @CurrentUser.Name</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Register">Signup</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
